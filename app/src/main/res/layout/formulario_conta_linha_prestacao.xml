<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/linha_prestacao_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/linha_prestacao_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_alignLeft="@id/linha_prestacao_data"
        android:layout_below="@id/linha_prestacao_data"/>

    <Switch
        android:id="@+id/linha_prestacao_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignTop="@id/linha_prestacao_data"
        android:layout_alignBottom="@id/linha_prestacao_numero"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:text="Pago"/>

    <Switch
        android:id="@+id/linha_prestacao_ativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignTop="@id/linha_prestacao_data"
        android:layout_alignBottom="@id/linha_prestacao_numero"
        android:layout_toLeftOf="@id/linha_prestacao_pago"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:text="Ativo"/>

</RelativeLayout>