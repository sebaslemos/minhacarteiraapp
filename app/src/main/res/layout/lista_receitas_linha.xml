<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/linha_receita_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:gravity="center|left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/linha_receita_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/linha_receita_descricao"
        android:layout_below="@id/linha_receita_descricao"
        android:gravity="center|left"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/linha_receita_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_alignTop="@id/linha_receita_descricao"
        android:layout_alignBottom="@id/linha_receita_data"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="5dp"/>

</RelativeLayout>